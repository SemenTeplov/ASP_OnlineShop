@model Product

<form method="post">
	<div class="text-center">
		<h3>Создание нового продукта</h3>
	</div>

	<div class="text-danger font-weight-bold" asp-validation-summary="All"></div>

	<div class="row">
		<div class="col"></div>
		<div class="col-6">
			<label asp-for="Name"></label><br />
			<input class="form-control" asp-for="Name" />
			<span asp-validation-for="Name" />
		</div>
		<div class="col"></div>
	</div>

	<div class="row">
		<div class="col"></div>
		<div class="col-6">
			<label asp-for="Description"></label><br />
			<input class="form-control" asp-for="Description" />
			<span asp-validation-for="Description" />
		</div>
		<div class="col"></div>
	</div>

	<div class="row">
		<div class="col"></div>
		<div class="col-6">
			<label asp-for="Coast"></label><br />
			<input class="form-control" asp-for="Coast" />
			<span asp-validation-for="Coast" />
		</div>
		<div class="col"></div>
	</div>

	<div class="row">
		<div class="col"></div>
		<div class="col-6">
			<button type="submit" asp-controller="Admin" asp-action="AddProduct">Создать</button>
		</div>
		<div class="col"></div>
	</div>
</form>