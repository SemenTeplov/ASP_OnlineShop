<form method="post">
	<div class="text-center">
		<h3>Вход</h3>
	</div>

	<div class="row">
		<div class="col"></div>
		<div class="col-6">
			<input class="form-control" type="text" name="userName" />
		</div>
		<div class="col"></div>
	</div>

	<div class="row">
		<div class="col"></div>
		<div class="col-6">
			<input class="form-control" type="password" name="password" />
		</div>
		<div class="col"></div>
	</div>

	<div class="row">
		<div class="col"></div>
		<div class="col-6">
			<input class="form-control" type="password" name="confirmPassword" />
		</div>
		<div class="col"></div>
	</div>

	<div class="row">
		<div class="col"></div>
		<div class="col-6">
			<button type="submit" asp-controller="Account" asp-action="Registr">Зарегистрироваться</button>
		</div>
		<div class="col"></div>
	</div>
</form>