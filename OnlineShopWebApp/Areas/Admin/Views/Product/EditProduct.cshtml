@model ProductViewModel

<form method="post">
	<div class="text-center">
		<h3>Редактирование продукта</h3>
	</div>

	<div class="text-danger font-weight-bold" asp-validation-summary="All"></div>

	<input type="hidden" name="Id" value="@Model?.Id" />

	<div class="row">
		<div class="col"></div>
		<div class="col-6">
			<label asp-for="Name"></label><br />
			<input class="form-control" asp-for="Name" value="@Model?.Name" />
			<span asp-validation-for="Name" />
		</div>
		<div class="col"></div>
	</div>

	<div class="row">
		<div class="col"></div>
		<div class="col-6">
			<label asp-for="Description"></label><br />
			<input class="form-control" asp-for="Description" value="@Model?.Description" />
			<span asp-validation-for="Description" />
		</div>
		<div class="col"></div>
	</div>

	<div class="row">
		<div class="col"></div>
		<div class="col-6">
			<label asp-for="Coast"></label><br />
			<input class="form-control" asp-for="Coast" value="@Model?.Coast" />
			<span asp-validation-for="Coast" />
		</div>
		<div class="col"></div>
	</div>

	<div class="row">
		<div class="col"></div>
		<div class="col-6">
			<label asp-for="ImagePath"></label><br />
			<input class="form-control" asp-for="ImagePath" />
			<span asp-validation-for="ImagePath" />
		</div>
		<div class="col"></div>
	</div>

	<div class="row">
		<div class="col"></div>
		<div class="col-6">
			<button type="submit" asp-area="Admin" asp-controller="Product" asp-action="EditProduct" asp-route-product="@Model">Редактировать</button>
		</div>
		<div class="col"></div>
	</div>
</form>