@model List<Role>

<div class="row">
    
    @await Html.PartialAsync("AdminLeftMenu")

    <div class="col-9">
        <div class="row">
            <h3>Список ролей</h3>
        </div>

        <th><a asp-area="Admin" asp-controller="Role" asp-action="AddRole">Добавить новую роль</a></th>

        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th>№</th>
                        <th>Название</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <th>@(i + 1)</th>
                            <th>@Model[i].Name</th>
                            <th><a asp-area="Admin" asp-controller="Role" asp-action="RemoveRole" asp-route-roleName="@Model[i].Name">Удалить</a></th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
</div>
